<div class="rename-module">
    <div class="rename-option-header">
        <input type="checkbox" class="rename-module-checkbox" id="nameModuleCheckbox">
        <label for="nameModuleCheckbox"><h3>Name [1]</h3></label>
    </div>

    <div class="rename-module-content">
        <div class="rename-control">
            <label>Operation:</label>
            <select id="nameOperation" class="rename-select">
                <option value="keep" selected>Keep</option>
                <option value="remove">Remove</option>
                <option value="fixed">Fixed</option>
                <option value="reverse">Reverse</option>
            </select>
        </div>

        <div class="rename-control">
            <label>Text:</label>
            <input type="text" id="nameText" placeholder="Enter text">
        </div>
    </div>
</div>